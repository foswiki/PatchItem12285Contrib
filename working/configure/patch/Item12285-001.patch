 }
 
+sub _validate {
+    $max = $_[1] if ( $_[1] > $max );
+    $min = $_[1] if ( $_[1] < $min );
+    if ( $_[1] > 100 ) {
+        $param_error = 1;
+        return
+"<span class=\"foswikiAlert\">Excessive parameter number $max, MAKETEXT rejected.</span>";
+    }
+    if ( $_[1] < 1 ) {
+        $param_error = 1;
+        return
+"<span class=\"foswikiAlert\">Invalid parameter <code>\"$_[0]\"</code>, MAKETEXT rejected.</span>";
+    }
+    return "[$_[0]]";
+}
+
